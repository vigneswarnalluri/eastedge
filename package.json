{
  "name": "ecommerce-website",
  "version": "1.0.0",
  "description": "Modern ecommerce website built with MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node server-render.js",
    "server": "nodemon server-render.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "keywords": [
    "ecommerce",
    "mern",
    "mongodb",
    "react",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "multer": "^1.4.5-lts.1",
    "razorpay": "^2.9.6",
    "stripe": "^13.6.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
